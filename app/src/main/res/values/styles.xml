<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>

        <item name="android:dividerHeight">@dimen/divider_size</item>
        <item name="android:dividerHorizontal">@android:color/darker_gray</item>
        <item name="android:dividerVertical">@android:color/darker_gray</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <style name="AppTheme.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="AppTheme.Text.H1">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_h1</item>
    </style>

    <style name="AppTheme.Text.H2">
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.Button" parent="AppTheme.Text">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/gap_small</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
        <item name="android:paddingLeft">@dimen/gap_large</item>
        <item name="android:paddingRight">@dimen/gap_large</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>


    <style name="AppTheme.Divider" />

    <style name="AppTheme.Divider.Horizontal">
        <item name="android:layout_width">?android:attr/dividerHeight</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <style name="AppTheme.Divider.Horizontal.Inset">
        <item name="android:layout_marginTop">@dimen/gap_small</item>
        <item name="android:layout_marginBottom">@dimen/gap_small</item>
    </style>

    <style name="AppTheme.Divider.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/dividerHeight</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>

</resources>
