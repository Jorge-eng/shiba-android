<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat" />

    <style name="AppTheme.Text.Body">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
